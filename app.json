{
    "name": "laravel-bootstrap",
    "scripts": {
        "postdeploy": "php artisan key:generate && php artisan db:seed && php artisan app:release"
    },
    "env": {
        "APP_ENV": {
            "required": true
        },
        "APP_DEBUG": {
            "required": true
        }
    },
    "addons": [
        "heroku-postgresql"
    ],
    "buildpacks": [
        {
            "url": "https://github.com/heroku/heroku-buildpack-nodejs"
        },
        {
            "url": "https://github.com/heroku/heroku-buildpack-php"
        }
    ]
}
